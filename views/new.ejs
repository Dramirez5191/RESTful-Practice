<% include partials/header%>
<div class="ui main text container segment">
  <div class="ui huge header">New Fruit</div>
  <form class="ui form" action="/fruits" method="POST">
      <div class="field">
        <label> Fruit Name</label>
        <input type="text" name="fruit[name]" placeholder="name of fruit">
      </div>
      <div class="field">
        <label> Image</label>
        <input type="text" name="fruit[image]" placeholder="Image of Fruit">
      </div>
      <div class="field">
        <label> Fruit Fun Facts </label>
        <textarea name="fruit[bio]" rows="8" cols="80"></textarea>
      </div>
        <input class="ui inverted violet big button" type="submit">
  </form>
</div>
