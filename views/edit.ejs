<%include partials/header%>

<div class="ui main text container segment">
  <div class="ui huge header">EDIT <%=fruit.name%></div>

  <form class="ui form" action="/fruits/<%= fruit._id%>?_method=PUT" method="POST">
      <div class="field">
        <label> Fruit Name</label>
        <input type="text" name="fruit[name]" value="<%=fruit.name%>">
      </div>
      <div class="field">
        <label> Image</label>
        <input type="text" name="fruit[image]" value="<%=fruit.image%>">
      </div>
      <div class="field">
        <label> Fruit Fun Facts </label>
        <textarea name="fruit[bio]" rows="8" cols="80"><%=fruit.bio%></textarea>
      </div>
        <input class="ui inverted violet big button" type="submit">
  </form>
</div>

<%include partials/footer%>
